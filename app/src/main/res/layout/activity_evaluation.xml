<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/public_bg">

    <com.smona.app.evaluationcar.ui.common.base.BaseScrollView
        android:id="@+id/baseScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/view_space_vertical">

                <ImageView
                    android:layout_width="@dimen/evaluation_title_image_size"
                    android:layout_height="@dimen/evaluation_title_image_size"
                    android:src="@drawable/icon_circle" />

                <TextView
                    android:id="@+id/chexing_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/evaluation_title_image_margin_left"
                    android:text="车型图"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.smona.app.evaluationcar.ui.common.base.LimitGridView
                android:id="@+id/grid_car_models"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:horizontalSpacing="3dip"
                android:listSelector="@color/transparent"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="10dip" />

            <LinearLayout
                android:id="@+id/title_certificates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/view_space_vertical">

                <ImageView
                    android:layout_width="@dimen/evaluation_title_image_size"
                    android:layout_height="@dimen/evaluation_title_image_size"
                    android:src="@drawable/icon_circle" />

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/evaluation_title_image_margin_left"
                    android:text="证件照"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.smona.app.evaluationcar.ui.common.base.LimitGridView
                android:id="@+id/grid_certificates"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:horizontalSpacing="3dip"
                android:listSelector="@color/transparent"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="10dip" />

            <LinearLayout
                android:id="@+id/title_append"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/view_space_vertical">

                <ImageView
                    android:layout_width="@dimen/evaluation_title_image_size"
                    android:layout_height="@dimen/evaluation_title_image_size"
                    android:src="@drawable/icon_circle" />

                <TextView
                    android:id="@+id/tv_append"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/evaluation_title_image_margin_left"
                    android:text="附加"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.smona.app.evaluationcar.ui.common.base.LimitGridView
                android:id="@+id/grid_appended"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:horizontalSpacing="3dip"
                android:listSelector="@color/transparent"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="10dip" />

            <View
                android:id="@+id/v_input"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip" />

            <include
                android:id="@+id/include_input"
                layout="@layout/evaluation_editor_item" />

            <LinearLayout
                android:id="@+id/title_qustion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_space_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/view_space_vertical">

                <ImageView
                    android:layout_width="@dimen/evaluation_title_image_size"
                    android:layout_height="@dimen/evaluation_title_image_size"
                    android:src="@drawable/icon_circle" />

                <TextView
                    android:id="@+id/tv_qustion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/evaluation_title_image_margin_left"
                    android:text="车况自述"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.smona.app.evaluationcar.ui.common.base.LimitListView
                android:id="@+id/lst_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:orientation="vertical"
                android:scrollbars="none" />

            <View
                android:id="@+id/view_bottom_space"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="@color/transparent" />
        </LinearLayout>
    </com.smona.app.evaluationcar.ui.common.base.BaseScrollView>

    <include
        android:id="@+id/include_indicator"
        layout="@layout/layou_instruction_edit" />

    <View
        android:id="@+id/line1"
        style="@style/public_grey_line"
        android:layout_above="@+id/lin_msg" />

    <LinearLayout
        android:id="@+id/lin_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_round_btn_white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dip"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="6dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_service_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textColor="@color/black_text"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            style="@style/public_grey_line"
            android:layout_width="@dimen/border_line_width"
            android:layout_height="fill_parent"
            android:layout_above="@+id/lin_msg" />

        <Button
            android:id="@+id/btn_saveDraft"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_round_btn_white"
            android:text="保存"
            android:textColor="@color/red_theme"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_red"
            android:text="立即提交"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>