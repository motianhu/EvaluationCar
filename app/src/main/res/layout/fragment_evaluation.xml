<?xml version="1.0" encoding="utf-8"?>
<com.smona.app.evaluationcar.ui.evaluation.EveluationLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@drawable/home_header_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="汇通端远程传输系统"
            android:shadowColor="#4d4d4d"
            android:shadowDx="0"
            android:shadowDy="-3"
            android:shadowRadius="2"
            android:textColor="@color/bg_white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="请输入评估单号进行搜索" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/uncommit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/setting_bg"
                android:text="@string/uncommit" />

            <Button
                android:id="@+id/auditing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/setting_bg"
                android:text="@string/auditing" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/notpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/setting_bg"
                android:text="@string/notpass" />

            <Button
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/setting_bg"
                android:text="@string/pass" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/status"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/pass" />

        <TextView
            android:id="@+id/evalution_gonggao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pass" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/notice"
        android:layout_marginTop="5dp"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:weightSum="3">

        <Button
            android:id="@+id/queryVin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/evalution_query_vin" />

        <Button
            android:id="@+id/preEvalution"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/evalution_pre" />

        <Button
            android:id="@+id/evalution"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/evalution_start" />

    </LinearLayout>

</com.smona.app.evaluationcar.ui.evaluation.EveluationLayer>