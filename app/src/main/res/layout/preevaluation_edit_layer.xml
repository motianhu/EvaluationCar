<?xml version="1.0" encoding="utf-8"?>
<com.smona.app.evaluationcar.ui.evaluation.preevaluation.PreEvaluationEditLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/setting_item_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <RelativeLayout
            android:id="@+id/container_cartype"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_pinpai" />

            <TextView
                android:id="@+id/tv_cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:textColor="@color/black_text"
                android:text="@string/title_car_type" />


            <TextView
                android:id="@+id/tv_type_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:hint="@string/select_car_model" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <RelativeLayout
            android:id="@+id/container_color"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_licheng" />

            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_text"
                android:layout_marginStart="50dp"
                android:text="@string/title_car_color" />


            <EditText
                android:id="@+id/tv_car_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:gravity="center|start|top"
                android:hint="@string/select_car_color"
                android:maxLength="8"
                android:textColor="@color/black_text"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <RelativeLayout
            android:id="@+id/container_cartime"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_cartime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_shijian" />

            <TextView
                android:id="@+id/tv_cartime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:textColor="@color/black_text"
                android:text="@string/title_car_time" />


            <TextView
                android:id="@+id/tv_timecontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black_text"
                android:hint="@string/select_car_time" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <RelativeLayout
            android:id="@+id/container_licheng"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_licheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_licheng" />

            <TextView
                android:id="@+id/tv_licheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:textColor="@color/black_text"
                android:text="@string/title_car_licheng" />


            <EditText
                android:id="@+id/tv_car_licheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:background="@color/white"
                android:gravity="center|start|top"
                android:maxLength="8"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:hint="@string/select_car_licheng" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:hint="@string/select_car_licheng_unit"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <RelativeLayout
            android:id="@+id/container_city"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_weizhi" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:textColor="@color/black_text"
                android:text="@string/title_car_city" />


            <TextView
                android:id="@+id/tv_car_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:hint="@string/select_car_city" />

            <ImageView style="@style/setting_item_arrow_style" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:id="@+id/container_mark"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:textColor="@color/black_text"
                android:text="@string/title_mark" />

            <EditText
                android:id="@+id/tv_car_mark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="18dip"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center|start|top"
                android:maxLength="8"
                android:textColor="@color/black_text"
                android:textSize="16.0sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <Button
            android:id="@+id/pre_submit"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button_style"
            android:text="@string/pre_evaluation_submit"
            android:textColor="@color/bg_white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</com.smona.app.evaluationcar.ui.evaluation.preevaluation.PreEvaluationEditLayer>